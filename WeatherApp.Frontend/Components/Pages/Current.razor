@page "/current"
@using WeatherApp.Frontend.Models
@inject IHttpClientFactory ClientFactory

<h3>Clima actual - San Salvador</h3>

@if (current == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="card p-3 text-center w-50 mx-auto">
        <h4>@current.City</h4>
        <p class="display-4">@current.Temperature&nbsp;°C</p>
        <p>@current.Description</p>
        <small>Última actualización: @current.Date.ToLocalTime()</small>
    </div>
}

@code {
    private CurrentWeather current;

    protected override async Task OnInitializedAsync()
    {
        var http = ClientFactory.CreateClient("WeatherApi");

        try
        {
            current = await http.GetFromJsonAsync<CurrentWeather>("/weather/current");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}
